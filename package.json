{
  "name": "boilerhouse",
  "version": "1.0.0",
  "author": "Jonas Hellgren",
  "homepage": "https://github.com/hellgren/boilerhouse#readme",
  "bugs": {
    "url": "https://github.com/hellgren/boilerhouse/issues"
  },
  "license": "UNLICENSED",
  "scripts": {
    "dev": "node server.js -p $PORT",
    "build": "next build",
    "start": "node server.js -p $PORT",
    "heroku-postbuild": "next build",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint './**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hellgren/boilerhouse.git"
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.10",
    "compression": "^1.7.4",
    "express": "^4.16.4",
    "next": "^9.3.2",
    "next-offline": "^3.3.7",
    "prettier": "^1.16.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-dom": "^16.8.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-emotion": "^10.0.7",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
